#!/bin/sh

link() {
    dest="$1"
    shift
    for f in "$@"; do
        ln -snfv "$PWD/$f" "$dest"
    done
}

link_dir() {
    mkdir -p "$1"
    link "$@"
}

cmd() {
    command -v "$1" > /dev/null
}

if [ -z "$CHASSIS" ]; then
    echo 'CHASSIS is not set' >&2
    exit 1
fi

mkdir -p ~/.local/bin

if cmd git; then
    link ~/.gitconfig git/gitconfig
    link ~/.gitignore git/gitignore
    link ~/.local/bin/git-ship git/git-ship
fi

if cmd kitty; then
    link_dir ~/.config/kitty kitty/*
fi

if cmd ranger; then
    link_dir ~/.config/ranger ranger/*
fi

if cmd ssh; then
    chmod 600 ssh/config
    link_dir ~/.ssh ssh/*
fi

if cmd gpg-agent; then
    mkdir -p ~/.gnupg
    chmod 700 ~/.gnupg
    link ~/.gnupg/gpg-agent.conf gpg-agent.conf
fi

if cmd tmux; then
    link ~/.tmux.conf tmux.conf
fi

if cmd mpv; then
    link_dir ~/.config/mpv mpv/*
fi
